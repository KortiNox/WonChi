$main_dark = #000
$main_lite = #fff
$main_highlite = #5c4c28
$main_buttons = #FFA343
$main_shift = 4.7rem;


html,
body {
    font: 18px/1.7 'Open Sans', sans-serif; 
}

body {
    background: $main_dark url(".././images/24.png") no-repeat center top; // changes!!
    background-size: 100% auto;
    color: $main_lite ;
    
}
a {
    color: $main_highlite;
    transition: opacity 0.3s;
    opacity: 1;


   
    &:hover {
        color: $main_highlite;
        }
    &:active{
        opacity :0.7;
                }

}

/*main-styles*/
.container {
    padding: 0 $main_shift $main_shift $main_shift;
    max-width: 1460px;
    margin: 0 auto;
    p{
        margin-bottom: 1.3em;
    }}
.cover-space {
    padding-bottom: 72%
    }

.header {
    position: absolute;
    top: 2rem;
    width: 100%;

    &__content{
        display: grid;
        grid-template-columns: auto 1fr;
        padding: 0 $main_shift;
        align-items: center;
        }
    &__center{
        display:flex;
        justify-content:center;
        }
    }
.logo{
    color:$main_lite;
    text-decoration: none;
    letter-spacing: 1%;

    &:hover {
        color: $main_lite;
        }
    
 
    &__title{
        font-size: 1.3rem;
        font-weight: 700;
        }
}
.main-nav{
    &__list{
        display: flex
        }
    &__link{
        color:$main_lite;
        text-decoration: none;
        padding:1.8rem 1.4rem;
        display: inline-block;

        &__visited{
            color: $main_lite
            }

        }
    }
.search {
    display:flex;
    align-items:center;
    justify-content:center;

    &__icon {
        width:1rem;
        height:1rem;
        background: url('./images/icons/search.svg')no-repeat center;
        background-size: contain;
        cursor:pointer;
        padding-right: 0.5rem;
        }
    
    &__form  {
        background: none;
        border: none;
        width: 3.4rem;
        font: 0.9rem/1 'Open Sans',sans-serif;
        transition: width 0.3s;
        padding: 0.2rem 0.5rem;
        border-radius: 5px


        &::placeholder {
        color: white;
        
        }
        &:focus {
            border: none;
            outline: none;
            width:10rem;
            background: white;
            &::placeholder {
                color:$main_dark;
                opacity: 1;

        }
        }
}
}
.section-main{
    display:flex;
    align-items:center;
    flex-direction: column;
    position:absolute;
    left:$main_shift;
    right:$main_shift;
    top: 14vw;
    }
.main-title{
    font-size: 1rem;
    margin-bottom: 6.2rem;

    &__summary {
        font-weight: 700;
        color: $main_dark;
        text-transform :uppercase;
        letter-spacing: .36em;
        margin-bottom: 1.5em;
        display: flex;
        align-items: center;

       

        }
    
    &__text {
        
        font-size: 5.4em;
        font-weight: 700;
        line-height: 1.1;

        &_regular{
            display:block;
            font-size:0.9em;
            font-weight:400;}
        }
}
.main-title_small{
    font-size: 1rem;
    margin-bottom:1.8em;

    

    .main-title__text{
        font-size: 3.4em;
        line-height: 1.4;}
    }

.social-networks {
    position: absolute;
    left:0;
    top:4rem;
    display: flex;
    flex-direction: column;
    align-items: center;

    &__title{
        writing-mode: vertical-rl;
        margin-bottom: 1.3rem;
    }

    &__item {
        margin-bottom: 1rem;
    }

    &__link {
        
        opacity: 1;
        transition: opacity 0.3s;
        &:hover{
            opacity 0.7;
            }
    }
    }
.scroll-down{
    display: flex;
    cursor: pointer;
    opacity: 1;
    transition:0.3s;
    &:hover {
        opacity: 0.7;
        }

    &__icon{
        margin: 0.2em 0 0 0.5em 
        }
    }
/*section */

.section-cols {
    display: flex;
    justify-content:space-between;
    align-items:center;
    margin-bottom: 200px;
    

    }
.section-col {
    &__image{
        width:50%;
        }
    &__content{
        width 44%
        }
        p {
            font-size: 1.3rem;
            line-height:2rem
        }
} 



.arrow-link{
    text-decoration: none;
    display: flex;
    align-items: center;

    &__icon{
        margin: 0.2rem 0 0 0.4rem;
        }
    }

.section-cols2 {
    display:  flex;
    justify-content:space-between;
    align-items:center;
    margin-bottom: 200px;
    }
    /*main-end footer*/

.start {
    display: flex;
    align-items: center;
    justify-content: space-between;

    &__title{
        font-size: 2.6rem;
        font-weight: 700;
        margin-right: 3rem;
        }
    &__desc{
        font-size: 1.2rem;
        margin-right: 3rem;
        }
    &__content {
        display: flex;
        align-items: center;
        }
    
    }
.git-hub__image{
    max-height: 60px;
    max-width: 60px;
    }

.section-border {
    padding-bottom: 3rem;
    border-bottom: 1px solid $main_lite
    margin-bottom: 3rem;
    }
.button{
    border: none;
    background: $main_buttons;
    font: 700 0.9rem/1 'Open Sans' , sans-serif;
    padding: 1.6em 4.5em 1.4em;
    border-radius: 5px;
    cursor: pointer;
    transition: background 0.3s;
    
    &:hover{
        background: $main_lite;
        }
    &:active{
        position:relative;
        top:2px;
        }

    }
.menu__link{
    color: $main_buttons;
    }
.menu__link:hover {
    color:$main_lite ;
    }
.arrow-link {
    color:$main_highlite;
    }
 .arrow-link:hover{
    color:$main_buttons;
    }

/*footer */
.subscribe {
    width: 30%;

    &__title{
        font-size: 2rem;
        font-weight: 800
        line-height: 1.4;
        margin-bottom: 1.4rem;}
    
    }

.email{
    width:100%;
    display: grid;
    grid-template-columns: 1fr auto;
    border-bottom: 1px solid $main_lite;

    &__form{
        background: none;
        border: none;
        font: 1rem/1 'Open Sans' , sans-serif;
        padding: 1em 1.5em;
        color: $main_lite;

        &::placeholder {
            color: $main_lite;
            opacity: 1;
            }

        &__focus{
            border: none;
            outline: none;
            }
        
    }
    }
.email__button {
        position :relative;
        padding: 0;
        height 100%;
        width: 3.5rem;
        border-radius: 5px 5px 0 0;
        display:flex;
        align-items:center;
        justify-content: center;
        }
.footer__content{
    display: flex;
    justify-content: space-between;
    align-items: center;
    }
.menu__list {
    display: flex;
    align-items: center;
    justify-content: space-around;
    text-decoration: none;
    list-style-type: none;
    
    }
.menu{
    width:50%;

    &__link{
        font-size: 2rem;
        font-weight: 800;
        line-height: 1.4;
        margin-bottom: 1.4rem;

        cursor:pointer;}
    }



/*icon*/
.icon__instagram{
    width: 1.3rem;
    height: 1.3rem;
    background: url("/images/icons/instagram.svg") no-repeat center center;
    background-size:contain;
    
    }

.icon__twitter{
    width: 1.3rem;
    height: 1.3rem;
    background: url("/images/icons/facebook.svg") no-repeat center center;
    background-size:contain;
    }

.icon__facebook{
     width: 1.3rem;
    height: 1.3rem;
    background: url("/images/icons/twitter.svg") no-repeat center center;
    background-size:contain;
    }
.icon__arrow_downward{
    width: 0.9rem;
    height: 1.3rem;
    background: url("/images/icons/arrow_downward.svg") no-repeat center center;
    background-size:contain;
    }
.icon-arrow__rightward{
    width: 1.3rem;
    height: 0.9rem;
    background: url("/images/icons/arrow_rightward.svg") no-repeat center center;
    background-size:contain;
    }



/*mobile*/

.burger-menu {
    display:grid;
    grid-template-columns: 1fr 

    &__content{
        display:grid;
        grid-template-columns: 1fr auto;

        }
    &__control {
        display:none;
        }
    }



//media 

@media screen and (max-width: 1200px) {
    html,
    body {
        font-size:26px;
    }
    .section-col {
        &__image{
        width:40%;
        }
        &__content{
        width 54%
        } 
    }
    .container {
        max-width: 1200px;
    }

    .burger-menu{
        position: fixed;
        z-index : 999;
        width: 70vw;
        top: 0;
        right: 0;
        bottom: 0;
        display :block;
        background: rgba(0, 0, 0 , 0.8) ;
        
        transform: translate3d(70vw , 0, 0);
        transition: transform 0.3s;

        &__content{
            display:block;
            height 100vh; 
            padding: 1rem 0 2rem;
            box-sizing: border-box;
            display: grid;
            grid-template-columns: 1fr;
            grid-template-rows: 1fr auto;
            }
        &__control{
            display: block;
            width: 2rem;
            height: 2rem;
            position: absolute;
            left: calc(-4.7rem - 2rem);
            top: 2rem;
            background: url("../images/icons/menu_white.svg") no-repeat center center;
            background: url("../images/icons/icon-test.png") no-repeat center center;
            background-size: contain;
            border: none;
            cursor: pointer;
            transition: opacity 0.3s;
            

            &:hover {
                opacity: 0.7;
                }

            }
        }
    .burger-menu_opened{
        transform: translate3d(0, 0, 0);

        .burger-menu__control{
            left:-4rem ;
            background: url("../images/icons/x_white.svg");
            background-size: cover;
            }
        }
    
    

    .main-nav{
        display:block;
        margin-bottom: 1rem;
        
        &__list{
            display:block;
            }
        &__link{
            width: 100%;
            box-sizing: border-box;
            text-align: center;
            transition: all 0.3s;
            padding: 1rem 1rem;

            &:hover {
                background: white;
                color: black;
                opacity: 1;
                }
            &:active {
                background: rgb(132, 127, 127);
                color: black;
                opacity: 1;
                transition:0.1s;

                }
            }
            
            
            
        }




}
@media screen and (max-width: 1550px) {
    html,
    body {
        font-size:14px;
    }
}
@media screen and (max-width: 1380px) {
     .section-col {
        &__image{
        width:43%;
        }
        &__content{
        width 50%
        }
}}
@media screen and (max-width: 1310px) {
    .main-titile {
        font-size: 0.9rem;
        }
}
@media screen and (max-width: 1000px) {
     .section-col {
        &__image{
        width:54%;
        }
        &__content{
        width 41%
        }
     }
    }
 
/*new and fix media */
@media screen and (max-width: 1750px) {
    .header {
        &__content{
            padding:0 1.5rem}
            }
    }

    .burger-menu__control {
        left:calc(-1.5rem -2rem)
        }
    .main-title {
        &__text{
            font-size:5em;
            }
        &__summary {
           
            }
        }
    .social-networks {
        margin-top: 250px;
        position: static;
        display:flex;
        align-items: center;
        &__title {
            writing-mode: initial;
            margin-right: 0
            }
        &__list {
            display:flex;
            width: 240px;
            justify-content: space-between;
            }
        &__link {
            padding:0 0.5rem;
            width:40px;
            }
        
        }